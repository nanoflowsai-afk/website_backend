generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HeroSlide {
  id                 Int      @id @default(autoincrement())
  heading            String
  subHeading         String
  tags               Json
  backgroundImageUrl String   @db.Text
  isActive           Boolean  @default(true)
  displayOrder       Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model About {
  id          Int      @id @default(autoincrement())
  mission     String   @db.Text
  vision      String   @db.Text
  teamIntro   String   @db.Text
  expertise   Json
  coreValues  Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamMember {
  id           Int      @id @default(autoincrement())
  name         String
  role         String
  bio          String
  expertise    Json
  avatarUrl    String   @db.Text
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  excerpt     String   @db.Text
  content     String   @db.Text
  imageUrl    String   @db.Text
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



model JobPosting {
  id           Int      @id @default(autoincrement())
  title        String
  department   String
  type         String
  location     String
  description  String   @db.Text
  requirements Json     @default("[]")
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  headline  String?
  bio       String?  @db.Text
  avatarUrl String?  @db.Text
  registrations WebinarRegistration[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Webinar {
  id              Int      @id @default(autoincrement())
  title           String
  description     String   @db.Text
  date            String
  time            String
  duration        String
  speaker         String
  level           String
  category        String
  type            String
  imageUrl        String   @db.Text
  registeredCount Int      @default(0)
  maxCapacity     Int      @default(100)
  isLandingPage   Boolean  @default(false)
  roadmapItems    WebinarRoadmapItem[]
  registrations   WebinarRegistration[]
  notificationActive Boolean  @default(false)
  notificationText   String?  @db.Text
  heroTitle          String?  @db.Text
  heroSubtitle       String?  @db.Text
  heroContext        String?  @db.Text
  heroImage          String?  @db.Text
  platform           String?  // e.g., "Zoom"
  mentorName         String?
  mentorRole         String?
  mentorImage        String?  @db.Text
  mentorBio          String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model WebinarRegistration {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  webinarId    Int
  webinar      Webinar  @relation(fields: [webinarId], references: [id], onDelete: Cascade)
  registeredAt DateTime @default(now())
  status       String   @default("confirmed") // confirmed, cancelled, attended

  @@unique([userId, webinarId])
}

model WebinarRoadmapItem {
  id          Int      @id @default(autoincrement())
  webinarId   Int
  webinar     Webinar  @relation(fields: [webinarId], references: [id], onDelete: Cascade)
  day         Int
  title       String
  subtitle    String?
  highlight   String?
  description Json     // Stored as a JSON array of strings
  imageUrl    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

